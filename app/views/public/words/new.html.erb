<div class="container mt-5">
  <%= form_with(model: @word, url: words_path, local: true, class: "card p-4") do |form| %>
    <div class="form-group">
      <%= form.label :title, "投稿話題名" %>
      <%= form.text_area :title, placeholder: "投稿話題名を入力してください", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content, "話題についての備考" %>
      <%= form.text_area :content, placeholder: "話題についての備考を入力してください", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :genre_id, "ジャンル" %>
      <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "ジャンルを選択してください" }, class: "form-control" %>
      <%= link_to "新しいジャンルを追加する", new_genre_path, class: "btn btn-sm btn-secondary mt-2" %>
    </div>
  <br>
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  <% end %>
</div>
