<div class="container mt-5 text-center">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">ランダム表示</h4>
      <% if @random_word %>
        <p class="card-text">話題: <%= @random_word.title %></p>
        <p class="card-text">内容: <%= @random_word.content %></p>

        <!-- 画像表示部分 -->
        <% if @random_word.images.any? %>
          <% random_image = @random_word.images.sample %>
          <%= image_tag random_image.url, alt: "Random Image", class: "img-fluid" %>
        <% else %>
          <% # ランダムな画像を表示する %>
          <%= image_tag "random/po#{rand(2..7)}.jpg", alt: "Random Image", class: "img-fluid" %>
        <% end %>

        <!-- リンクを画像の下に表示 -->
        <%= link_to '別のランダムな話題を表示', random_word_path, class: "btn btn-primary" %>

      <% else %>
        <p class="card-text">話題が存在しません。</p>
      <% end %>
    </div>
  </div>
</div>
