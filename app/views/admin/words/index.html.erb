<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="my-4">Word一覧</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @words.each do |word| %>
            <tr>
              <td><%= word.id %></td>
              <td><%= word.title %></td>
              <td><%= word.content %></td>
              <td>
                <%= link_to '詳細', admin_word_path(word), class: 'btn btn-primary btn-sm mx-1' %>
                <%= link_to '編集', edit_admin_word_path(word), class: 'btn btn-warning btn-sm mx-1' %>
                <%= link_to '削除', admin_word_path(word), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm mx-1' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
