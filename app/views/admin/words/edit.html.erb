<!-- app/views/admin/words/edit.html.erb -->
<h1>Wordの編集</h1>
<%= form_for @word, url: admin_word_path(@word), method: :patch do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit '変更を保存', class: "btn btn-success" %>
  </div>
<% end %>
<%= link_to '詳細に戻る', admin_word_path(@word) %>

<% if @word.errors.any? %>
  <p>エラーが発生しました:</p>
  <ul>
    <% @word.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if action_name == 'edit' %>
  <%= link_to 'キャンセル', admin_word_path(@word) %>
<% else %>
  <%= link_to '一覧に戻る', admin_words_path %>
<% end %>
