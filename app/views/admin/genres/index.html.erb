<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <h1 class="mt-5">ジャンル一覧</h1>
      <div class="table-responsive mt-4">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>名前</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.id %></td>
                <td><%= genre.name %></td>
                <td>
                  <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary btn-sm" %>
                  <!-- 他の操作ボタンをここに追加 -->
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to "新規ジャンル追加", new_admin_genre_path, class: "btn btn-success mt-3" %>
    </div>
  </div>
</div>
