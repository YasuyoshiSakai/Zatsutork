<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card mt-5">
        <div class="card-body">
          <h4 class="card-title">新しいジャンルを追加</h4>
          <%= form_with(model: @genre, url: admin_genres_path, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :name, "ジャンル名" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <%= form.submit "ジャンル追加", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
